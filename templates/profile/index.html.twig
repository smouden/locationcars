{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}


{% block content %}

	<!-- SubHeader -->
	<section class="parallax-window" id="short" data-parallax="scroll" data-image-src="{{ asset('assets/images/header.png') }}" data-natural-width="1400" data-natural-height="300">
		<div id="sub_header">
			<div class="container" id="sub_content">
				<div class="row">
					<div class="col-md-12">
						<h1>Profil</h1>
						<!-- End bread-crums -->
					</div>
				</div>
				<!-- End row -->
			</div>
			<!-- End container -->
		</div>
	</section>
	<!-- End SubHeader -->

	<div class="white_bg">
		<div class="container margin_60">
			<div class="main_title">
				<h2 class="nomargin_top">User Profile</h2>
				<hr class="divider">
			</div>

			<div class="row">
				<div
					class="col-md-6 col-md-offset-3">
					<!-- Adding col-md-offset-3 to center the form -->
					<div class="form-login">
						{{ form_start(form) }}
						{{ form_row(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
						{{ form_row(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
						{{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email Address'}}) }}
						{{ form_row(form.password, {
                    'attr': {'class': 'form-control', 'placeholder': 'New Password'},
                    'value': ''
                    }) }}
						<div class="row">
							<div class="col-md-6 col-xs-6 text-left">
								<button type="submit" class="btn btn-primary">Save Changes</button>
							</div>
						</div>
						{{ form_end(form) }}

					</div>
				</div>
			</div>
		</div>
		<!-- End container -->
	</div>
	<!-- End white_bg -->


{% endblock %}
